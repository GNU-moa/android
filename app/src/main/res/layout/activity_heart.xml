<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".heartActivity">

    <ImageButton
        android:id="@+id/heart_noticeBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/notice"
        tools:layout_editor_absoluteY="666dp" />

    <ImageButton
        android:id="@+id/heart_majorBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/heart_noticeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heart_noticeBtn"
        app:srcCompat="@drawable/major" />

    <ImageButton
        android:id="@+id/heart_searchBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heart_appName"
        app:layout_constraintTop_toTopOf="@+id/heart_appName"
        app:srcCompat="@drawable/baseline_search_24" />

    <ImageButton
        android:id="@+id/heart_listBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FEFEFE"
        app:layout_constraintEnd_toStartOf="@+id/heart_appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heart_appName"
        app:srcCompat="@drawable/baseline_menu_24" />

    <TextView
        android:id="@+id/heart_majorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/heart_majorBtn"
        tools:layout_editor_absoluteX="66dp" />

    <TextView
        android:id="@+id/heart_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="GNUMOA"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#38BEC9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heart_noticeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/heart_noticeBtn"
        tools:layout_editor_absoluteX="195dp" />

    <TextView
        android:id="@+id/heart_heartTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심목록"
        android:textColor="#38BDC8"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/heart_heartBtn"
        tools:layout_editor_absoluteX="313dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="409dp"
        android:layout_height="594dp"
        android:background="#E6E3E3"
        app:layout_constraintBottom_toBottomOf="@+id/heart_noticeTV"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/heart_GNU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gnu_noheart" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/heart_heartBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heart_noticeBtn"
        app:layout_constraintTop_toTopOf="@+id/heart_noticeBtn"
        app:srcCompat="@drawable/i_love_you_colored" />

</androidx.constraintlayout.widget.ConstraintLayout>


