<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/sub_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="GNUMOA"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#38BEC9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="414dp"
        android:layout_height="593dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_noticeTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/sub_heartTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심목록"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sub_heartBtn"
        app:layout_constraintStart_toStartOf="@+id/sub_heartBtn"
        app:layout_constraintTop_toBottomOf="@+id/sub_heartBtn" />

    <TextView
        android:id="@+id/sub_noticeTV"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:text="공지"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sub_noticeBtn"
        app:layout_constraintStart_toStartOf="@+id/sub_noticeBtn"
        app:layout_constraintTop_toBottomOf="@+id/sub_noticeBtn" />

    <TextView
        android:id="@+id/sub_majorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sub_majorBtn"
        app:layout_constraintStart_toStartOf="@+id/sub_majorBtn"
        app:layout_constraintTop_toBottomOf="@+id/sub_majorBtn" />

    <ImageButton
        android:id="@+id/sub_searchBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sub_appName"
        app:layout_constraintTop_toTopOf="@+id/sub_appName"
        app:srcCompat="@drawable/baseline_search_24" />

    <ImageButton
        android:id="@+id/sub_listBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FEFEFE"
        app:layout_constraintEnd_toStartOf="@+id/sub_appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_appName"
        app:srcCompat="@drawable/baseline_menu_24" />

    <ImageButton
        android:id="@+id/sub_heartBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sub_noticeBtn"
        app:layout_constraintTop_toTopOf="@+id/sub_noticeBtn"
        app:srcCompat="@drawable/i_love_you" />

    <ImageButton
        android:id="@+id/sub_majorBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/sub_noticeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_noticeBtn"
        app:srcCompat="@drawable/major" />

    <ImageButton
        android:id="@+id/sub_noticeBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#FEFEFE"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/notice"
        tools:layout_editor_absoluteY="666dp" />

</androidx.constraintlayout.widget.ConstraintLayout>